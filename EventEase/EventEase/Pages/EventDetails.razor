@page "/eventdetails/{Id:int}"
@using EventEase.Data
@code {
    [Parameter] public int Id { get; set; }
    private EventModel? Event;

    protected override void OnInitialized()
    {
        var allEvents = new List<EventModel>
        {
            new EventModel { Id=1, Name="Tech Conference", Date=DateTime.Now.AddDays(10), Location="Riyadh" },
            new EventModel { Id=2, Name="Music Festival", Date=DateTime.Now.AddDays(20), Location="Jeddah" },
            new EventModel { Id=3, Name="Art Expo", Date=DateTime.Now.AddDays(30), Location="Dammam" },
        };

        Event = allEvents.FirstOrDefault(e => e.Id == Id);
    }
}

@if (Event == null)
{
    <p>Event not found.</p>
}
else
{
    <h3>@Event.Name</h3>
    <p>Date: @Event.Date.ToString("MMMM dd, yyyy")</p>
    <p>Location: @Event.Location</p>
    <a href="/registration" class="btn btn-success">Register</a>
}
